@model ContactModel;


    <!-- contact section -->

    <section class="contact_section layout_padding">
        <div class="container ">
            <div class="heading_container">
                <h2 class="">
                    Contact Us
                </h2>
            </div>

        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Contact" id="contact_form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Name" />
                        </div>
                        <div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <input type="text" asp-for="Email" class="form-control" placeholder="Email"/>                            
                        </div>
                        <div>
                             <span asp-validation-for="Subject" class="text-danger"></span>
                            <input type="text" asp-for="Subject" class="form-control" placeholder="Subject"/>
                        </div>
                        <div > 
                            <span asp-validation-for="Body" class="text-danger"></span>
                            <input type="text" asp-for="Body" class="message-box" placeholder="Message"/>
                        </div>
                        <div class="d-flex ">
                            <input type="submit" value="SEND" class="btn btn-primary contact_btn" onclick="submitForm()"  />
                        </div>
                        <div>
                            <i>@ViewBag.Message</i>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <div class="map_container">
                        <div class="map-responsive">
                            <iframe src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA0s1a7phLN0iaD6-UE7m4qP-z21pH0eSc&q=Eiffel+Tower+Paris+France"
                                    width="600" height="300" frameborder="0" style="border:0; width: 100%; height:100%"
                                    allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end contact section -->

@section Scripts{   
                <partial name="_ValidationScriptsPartial" />
    }
    


