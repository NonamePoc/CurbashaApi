@model CurbashaApi.Areas.Identity.Entity.AspUserOrder

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var selectedItems = ViewBag.SelectedItems as IEnumerable<CurbashaApi.Areas.Identity.Entity.AspOrderItem>;
}
<h1>Details</h1>

<div>
    <h4>AspUserOrder</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreateAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            Selected Items
        </dt>
        <dd>
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Product name
                        </th>
                        <th>
                            Size
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Photo
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in selectedItems)
                    {
                        <tr>
                            <td>
                                @item.ProductName
                            </td>
                            <td>
                                @item.Size
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                @item.Price
                            </td>
                            <td>
                                @if (System.IO.File.Exists($"wwwroot/images/products/{@item.Id}.1.jpg"))
                                    {
                                    <img src="~/images/products/@item.ProductId.1.jpg" width="50" height="70" />
                                    }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>   
    <a asp-action="Index">Back to List</a>
</div>
