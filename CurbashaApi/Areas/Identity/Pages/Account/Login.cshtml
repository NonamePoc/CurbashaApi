@page
@model LoginModel


    <!-- contact section -->

    <section class="contact_section layout_padding">
        <div class="container ">
            <div class="heading_container" style="justify-content: center;">
                <h2 class="">
                    Log In
                </h2>
            </div>

        </div>
        <div class="container">
            <div class="row" style="justify-content: center;">
                <div class="col-md-6">
                    <form id="account" method="post">
                        <div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                        </div>
                        <div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                        </div>
                        <div>
                            <checkbox asp-for="Input.RememberMe" value="Remember me">
                        </div>
                        <div class="d-flex " style="justify-content: center;">
                            <button id="login-submit" type="submit">
                                LOG IN
                            </button>

                        </div>
                    </form>
                    <p style="text-align: center; padding-top: 20px; margin-right: 20px;">Or <a asp-area="Identity" asp-page="/Account/Register" style="color: #24d278">Sign Up</a></p>

                    <p style="text-align: center; padding-top: 10px; margin-right: 20px;">
                    <a asp-area="Identity" asp-page="/Account/ForgotPassword" style="color: #24d278">Don't remember password?</a></p>
                </div>

            </div>
        </div>
    </section>
    <!-- end contact section -->
    
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
